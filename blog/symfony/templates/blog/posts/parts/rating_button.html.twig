<b-btn id="post-{{ ratingPost.id }}-rating-popover-button" variant="primary">
  Rating:

  {% if ratingPost.votesValue > 3 %}
    <b-badge variant="success">
      {{ ratingPost.votesValue }}
    </b-badge>
  {% elseif ratingPost.votesValue < 3 %}
    <b-badge variant="danger">
      {{ ratingPost.votesValue }}
    </b-badge>
  {% else %}
    <b-badge variant="secondary">
      {{ ratingPost.votesValue }}
    </b-badge>
  {% endif %}
</b-btn>

{% if is_granted('IS_AUTHENTICATED_FULLY') and votingActivate is defined and votingActivate %}
  <b-button
    size="small"
    variant="{% if ratingPost.userVoteValue(app.user) %}outline-{% endif %}success"
  >
    👍🏻
  </b-button>

  <b-button
    size="small"
    variant="{% if not ratingPost.userVoteValue(app.user) %}outline-{% endif %}danger"
  >
    👎🏻
  </b-button>
{% endif %}
