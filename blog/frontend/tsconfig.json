{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["**/*.ts", "**/*.vue"]
}
